/* pages/mine/mine.wxss */
@import "/pages/icon/iconfont.wxss";
/* 顶部登录部分 */

button {
  background-color:#FFE45F; 
}

button::after {
  border: none;
}

.top {
  width: 750rpx;
  height: 300rpx;
  position: relative;
  background: #FFE45F;
}

.user-info {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 350rpx;
  height: 200rpx;
  transform: translate(-50%, -50%);
}

.icon-denglu {
  font-size: 128rpx;
  color: gray;
}

.login {
  width: 300rpx;
}

.login-top {
  width: 300rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.login-bottom {
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.button_login {
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  color: #F76245;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%);
}

.nickname {
  height: 50rpx;
  width: 350rpx;
}

.user-top {
  height: 150rpx;
  width: 350rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  border-radius: 30rpx;
  text-align: center;
  padding: 0 10rpx;
  direction: flex;
  flex-direction: row;
  justify-content: center;
}

.share {
  width: 750rpx;
  height: 100rpx;
  position: absolute;
  bottom: 0;
}

.save, .history {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5baaf7;
  color: red;
  border-right-color: transparent;
  float: left;
}


/* 顶部登录部分结束 */

.mine {
  width: 100%;
  height: 100rpx;
  background: white;
  position: relative;
  margin-top: 5rpx;
}

.mine-left {
  width: 15%;
  height: 100rpx;
  float: left;
  position: relative;
}

.mine-right {
  height: 100rpx;
  width: 85%;
  float: right;
}

.content {
  line-height: 100rpx;
}

.mineicon {
  display: block;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.triangle {
  width: 20rpx;
  height: 20rpx;
  background: transparent;
  border-top: 4rpx solid #9b9b9b;
  border-right: 4rpx solid #9b9b9b;
  transform: rotate(45deg) translate(-50%, 2%);
  position: absolute;
  right: 2%;
  top: 50%;
}
.contact {
  width: 100%;
  height: 100rpx;
  position: relative;
}


.contact {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 6%;
  left: 50%;
  transform: translate(-50%,6%);
}
.icon-kefu {
  font-size: 70rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}