<form bindsubmit='bindFormSubmit' data-form-id='{{formId}}'>
  <view class='suggest'>
    <text class='problem'>您有什么问题或建议想对我们说?</text>
  </view>
  <view class="theme">
    <text class='content'>您的主题:</text>
    <input name="title" class='title' placeholder-class='inputcotnent' maxlength='15' placeholder='不超过15个字'></input>
  </view>
  <view class='suggest2'>
    <view class='textarea'>
      <textarea name="suggest" placeholder='您宝贵的意见，就是我们进步的源泉(不超过80个字)' placeholder-class='inputcotnent'></textarea>
    </view>
  </view>
  <view class='theme'>
    <input maxlength='11' type='number' name="phonenumber" class='phone' placeholder='手机号码  (必填)' placeholder-class='inputcotnent '></input>
  </view>
  <view class='email'>
    <text>Email</text>
  </view>
  <view class='theme'>
    <input name="email" class='phone' placeholder='联系邮箱如example@qq.com（选填）' placeholder-class='inputcotnent '></input>
  </view>
  <button class='submit' form-type='submit'>提交</button>
</form>







